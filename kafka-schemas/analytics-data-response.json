{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Analytics Data Response",
  "description": "Schema for analytics data responses",
  "type": "object",
  "properties": {
    "correlationId": {
      "type": "string",
      "description": "Correlation ID from the request"
    },
    "requestType": {
      "type": "string",
      "enum": ["URLS_WITH_CLICKS", "CLICK_EVENTS"],
      "description": "Type of data being returned"
    },
    "data": {
      "type": "array",
      "description": "The requested data array"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Response timestamp"
    },
    "error": {
      "type": ["string", "null"],
      "description": "Error message if request failed"
    },
    "totalCount": {
      "type": "integer",
      "description": "Total number of records"
    }
  },
  "required": ["correlationId", "requestType", "data", "timestamp"]
}