{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "URL Ownership Verification Request",
  "description": "Schema for URL ownership verification requests",
  "type": "object",
  "properties": {
    "correlationId": {
      "type": "string",
      "description": "Unique correlation ID for request-reply pattern"
    },
    "urlId": {
      "type": "string",
      "description": "URL ID to verify ownership"
    },
    "userId": {
      "type": "string", 
      "description": "User ID to check ownership"
    },
    "replyTo": {
      "type": "string",
      "description": "Topic to send response to"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Request timestamp"
    }
  },
  "required": ["correlationId", "urlId", "userId", "replyTo", "timestamp"]
}